<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@color/mainColor"
        app:layout_constraintTop_toTopOf="parent"
        >
        <include
            layout="@layout/profile_toolbar"/>





    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:cardElevation="5dp"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="15dp"
        android:padding="2dp"
        android:id="@+id/search_cardview"
        android:background="@drawable/image_border"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/basic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Basic Info"
            android:textColor="@color/mainColor"
            android:textSize="20sp"
            android:fontFamily="@font/rasa_bold"
            android:layout_marginTop="10dp"
            />
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/basic_info"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:text="E-mail"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:fontFamily="@font/rasa_bold"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:text="Phone Number"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:fontFamily="@font/rasa_bold"
                android:layout_marginTop="5dp"
                />
           <TextView
                android:id="@+id/id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/phone_number"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:text="ID Card"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:fontFamily="@font/rasa_bold"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/car_licence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/id_card"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:text="Car Licence"
                android:textColor="@color/mainColor"
                android:textSize="20sp"
                android:fontFamily="@font/rasa_bold"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:id="@+id/email_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/basic_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_right_sign"
                android:layout_marginTop="5dp"

                />
            <ImageView
                android:id="@+id/phone_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_right_sign"
                android:layout_marginTop="5dp"

                />
            <ImageView
                android:id="@+id/id_card_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/phone_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_right_sign"
                android:layout_marginTop="5dp"

                />
            <ImageView
                android:id="@+id/car_licence_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_right_sign"
                android:layout_marginTop="5dp"

                />


        </android.support.constraint.ConstraintLayout>




    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>