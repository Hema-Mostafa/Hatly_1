<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="25dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    android:padding="2dp"
    android:id="@+id/match_trip_cardview">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <TextView
            android:id="@+id/from_txtView_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cairo"
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/rasa_regular"


            />

        <ImageView
            android:id="@+id/transportionTypeImg_tr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_car_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/from_txtView_tr"
            app:layout_constraintEnd_toStartOf="@id/to_txtView_tr"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:tint="@color/mainColor"


            />
        <TextView
            android:id="@+id/to_txtView_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minia"
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:fontFamily="@font/rasa_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="15dp"



            />
        />
        <TextView
            android:id="@+id/date_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Before Date : 20/2/2019 "
            android:textSize="15sp"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            android:fontFamily="@font/rasa_regular"
            app:layout_constraintTop_toBottomOf="@id/from_txtView_tr"
            app:layout_constraintStart_toStartOf="@id/from_txtView_tr"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"



            />
        <TextView
            android:id="@+id/shipment_weight_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/date_tr"
            android:text="Weight : 2 kg"
            android:textColor="@color/mainColor"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/rasa_bold"
            android:textSize="18sp"

            />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFD2D5DA"
            app:layout_constraintTop_toBottomOf="@id/shipment_weight_tr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shipper_img_tr"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/shipper_image"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/shipper_name_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/shipper_img_tr"
            android:text="HeMa Mostafa"
            android:textColor="@color/mainColor"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />.

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/traveller_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/shipper_name_tr"
                    app:layout_constraintStart_toStartOf="@id/shipper_name_tr"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:numStars="5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:theme="@style/RatingBar"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:isIndicator="true"
                    android:stepSize="0.5"

                    />


        <Button
            android:id="@+id/send_request_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"

            android:layout_marginEnd="5dp"
            android:text="SEND REQUEST"
            android:background="@drawable/btn_style"
            android:textColor="@color/white"
            android:padding="10dp"
            />


    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>