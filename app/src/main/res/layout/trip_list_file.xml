<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tripCardView"
    app:cardElevation="5dp"
    app:cardCornerRadius="25dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/from_txtView_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cairo"
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rasa_regular"


            />

        <ImageView
            android:id="@+id/transportionTypeImg_tr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_train"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/from_txtView_tr"
            app:layout_constraintEnd_toStartOf="@id/to_txtView_tr"
            android:layout_marginTop="5dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:background="@color/white"
            android:tint="@color/mainColor"


            />
        <TextView
            android:id="@+id/to_txtView_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minia"
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:fontFamily="@font/rasa_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/close_icons"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"



            />
        <ImageView
            android:id="@+id/close_icons"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_drop_down_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:tint="@color/mainColor"



            />
        <TextView
            android:id="@+id/date_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:textStyle="bold"
            android:fontFamily="@font/rasa_regular"
            app:layout_constraintTop_toBottomOf="@id/from_txtView_tr"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"



            />
        <TextView
            android:id="@+id/dateNumber_sh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/2/2018"
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/rasa_regular"
            app:layout_constraintTop_toBottomOf="@id/from_txtView_tr"
            app:layout_constraintStart_toEndOf="@id/from_txtView_tr"
            app:layout_constraintEnd_toStartOf="@id/transportionTypeImg_tr"
            android:layout_marginStart="20dp"

            android:layout_marginTop="15dp"



            />
        <TextView
            android:id="@+id/weighString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight : "
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/rasa_regular"
            app:layout_constraintTop_toBottomOf="@id/date_tr"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/weightNumbeer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 5 "
            android:textSize="20sp"
            android:textColor="@color/mainColor"
           android:fontFamily="@font/rasa_regular"
            app:layout_constraintTop_toBottomOf="@id/dateNumber_sh"
            app:layout_constraintStart_toEndOf="@id/from_txtView_tr"
            app:layout_constraintEnd_toStartOf="@id/transportionTypeImg_tr"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>